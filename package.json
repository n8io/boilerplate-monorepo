{
  "name": "boilerplate-monorepo",
  "private": true,
  "engines": {
    "node": "^12.13.0"
  },
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bump": "lerna version prepatch --no-commit-hooks --yes",
    "bootstrap": "lerna bootstrap",
    "clean": "yarn run -s dcd && yarn run -s dc down --remove-orphans",
    "dc": "docker-compose --project-directory . --file ./docker/docker-compose.yml",
    "dcd": "yarn run -s dc kill",
    "dclf": "yarn run -s dc logs -f",
    "dcu": "yarn run -s dc up --force-recreate",
    "dcud": "yarn run -s dcu -d",
    "dev:ui": "yarn run -s dcud ui && yarn run -s logs:ui",
    "dev": "yarn run -s run-all dev:*",
    "down": "yarn run -s clean",
    "down:ui": "yarn run -s dcd ui",
    "format": "yarn -s run run-all format:*",
    "format:js-eslint": "eslint --cache --fix '**/*.js'",
    "format:js-prettier": "prettier --write '**/*.js'",
    "lint": "yarn -s run run-all lint:*",
    "lint:css": "yarn -s linter:stylelint 'packages/ui/**/*.js'",
    "lint:js-eslint": "yarn -s linter:eslint '**/*.js'",
    "lint:js-prettier": "yarn -s linter:prettier '**/*.js'",
    "linter:eslint": "eslint --max-warnings 0 --report-unused-disable-directives",
    "linter:prettier": "prettier --check",
    "linter:stylelint": "stylelint --max-warnings=0 --allow-empty-input",
    "logs": "yarn run -s run-all logs:*",
    "logs:ui": "yarn run -s dclf ui",
    "run-all": "npm-run-all --parallel",
    "start:ui": "lerna run start --loglevel silent --scope \"@${npm_package_name}/ui\" --stream",
    "start": "yarn run -s run-all start:*"
  },
  "devDependencies": {
    "@arkweid/lefthook": "^0.6.3",
    "babel-eslint": "^10.0.2",
    "babel-jest": "^24.8.0",
    "babel-plugin-macros": "^2.6.1",
    "babel-plugin-module-resolver": "^3.2.0",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-eslint-comments": "^3.1.2",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-import-helpers": "^1.0.2",
    "eslint-plugin-jest": "^22.15.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-ramda": "^2.5.1",
    "lerna": "^3.16.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2"
  }
}
