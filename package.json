{
  "name": "boilerplate-monorepo",
  "private": true,
  "engines": {
    "node": "^14.2.0",
    "yarn": "^1.19.1"
  },
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "ðŸ”¥": "rm -rf {coverage,node_modules} && (cd packages/common && rm -rf {coverage,dist,node_modules}) && (cd packages/service && rm -rf {coverage,dist,node_modules}) && (cd packages/ui && rm -rf {build,coverage,node_modules}) && (cd packages/ui-common && rm -rf {coverage,dist,node_modules})",
    "ðŸš€": "yarn -s hosts && yarn run -s run-all start:dev:*",
    "bootstrap": "lerna bootstrap",
    "build": "yarn -s build:adhoc && yarn -s run-all-p build:adhoc:service build:ui",
    "build:adhoc": "yarn run -s build:adhoc:common",
    "build:adhoc:common": "lerna run build --loglevel silent --scope \"@${npm_package_name}/common\" --stream",
    "build:adhoc:service": "lerna run build --loglevel silent --scope \"@${npm_package_name}/service\" --stream",
    "build:adhoc:ui": "lerna run build --loglevel silent --scope \"@${npm_package_name}/ui\" --stream",
    "build:adhoc:ui-common": "lerna run build --loglevel silent --scope \"@${npm_package_name}/ui-common\" --stream",
    "build:common": "yarn -s run-all-s build:adhoc:common build:adhoc:ui-common",
    "build:service": "yarn -s build:adhoc && yarn -s build:adhoc:service",
    "build:ui": "yarn -s build:adhoc && yarn -s run-all-s build:adhoc:ui-common build:adhoc:ui",
    "bump": "lerna version prepatch --no-commit-hooks --yes",
    "clean": "yarn run -s dcd && yarn run -s dc down --remove-orphans && docker network prune -f",
    "db:migrate:down": "lerna run migration:down --loglevel silent --stream --scope \"@${npm_package_name}/service\"",
    "db:migrate:gen": "lerna run migration:gen --loglevel silent --stream --scope \"@${npm_package_name}/service\" --",
    "db:migrate": "lerna run migration:latest --loglevel silent --stream --scope \"@${npm_package_name}/service\"",
    "dc": "docker-compose --project-directory . --file ./docker/docker-compose.yml",
    "dcd": "yarn run -s dc kill",
    "dclf": "yarn run -s dc logs -f",
    "dcu": "yarn run -s dc up --force-recreate",
    "dcud": "yarn run -s dcu -d",
    "dev": "yarn run -s dcud ui service && yarn run -s run-all logs:*",
    "down": "yarn run -s clean",
    "down:ui": "yarn run -s dcd ui",
    "e2e:run": "cypress run --config-file ./cypress/cypress.json",
    "e2e:ci": "start-server-and-test start http://localhost:3000 e2e:run",
    "e2e:dev": "cypress open --config-file ./cypress/cypress.json",
    "format": "yarn -s run run-all format:*",
    "format:js-eslint": "eslint --cache --fix '**/*.js'",
    "format:js-prettier": "prettier --write '**/*.js'",
    "heroku-postbuild": "yarn run -s run-all-s build:common build:${DEPLOYMENT:-service}",
    "hosts": "node ./.ini/hosts.js",
    "lint": "yarn -s run run-all lint:*",
    "lint:css": "yarn -s linter:stylelint 'packages/ui/**/*.js'",
    "lint:graphql": "yarn -s linter:graphql",
    "lint:js-eslint": "yarn -s linter:eslint '**/*.js'",
    "lint:js-prettier": "yarn -s linter:prettier '**/*.js'",
    "linter:eslint": "eslint --max-warnings 0 --report-unused-disable-directives",
    "linter:graphql": "graphql-schema-linter --config-directory ./.graphql",
    "linter:prettier": "prettier --check",
    "linter:stylelint": "stylelint --max-warnings=0 --allow-empty-input --config packages/ui/.stylelintrc.js",
    "logs": "yarn run -s run-all logs:*",
    "logs:service": "yarn run -s dclf service",
    "logs:ui": "yarn run -s dclf ui",
    "run-all": "yarn -s run-all-p --silent",
    "run-all-p": "run-p",
    "run-all-s": "run-s",
    "start:dev:common": "lerna run start --loglevel silent --scope \"@${npm_package_name}/common\" --stream",
    "start:dev:db": "yarn -s dcud cache db email",
    "start:dev:gql": "sleep 10 && lerna run start --loglevel silent --scope \"@${npm_package_name}/tool-hook-generator\" --stream",
    "start:dev:service": "sleep 1 && lerna run start --loglevel silent --scope \"@${npm_package_name}/service\" --stream",
    "start:dev:ui": "sleep 1 && lerna run start --loglevel silent --scope \"@${npm_package_name}/ui\" --stream",
    "start:dev:ui-common": "lerna run start --loglevel silent --scope \"@${npm_package_name}/ui-common\" --stream",
    "start": "yarn -s ðŸš€",
    "start:prod": "lerna run start:prod --loglevel silent --scope \"@${npm_package_name}/{service,ui}\" --stream",
    "start:prod:service": "lerna run start:prod --loglevel silent --scope \"@${npm_package_name}/service\" --stream",
    "start:prod:ui": "lerna run start:prod --loglevel silent --scope \"@${npm_package_name}/ui\" --stream",
    "start:prod:ui:heroku": "lerna run start:prod:heroku --loglevel silent --scope \"@${npm_package_name}/ui\" --stream",
    "stop:db": "yarn -s dcd db",
    "test": "CI=true lerna run test --stream -- --passWithNoTests --ci --color",
    "test:ci": "CI=true lerna run test:ci --stream -- --passWithNoTests --ci --color --collectCoverage=true",
    "test:watch": "lerna run test:watch --parallel"
  },
  "devDependencies": {
    "@arkweid/lefthook": "^0.7.1",
    "@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "babel-eslint": "^10.0.2",
    "babel-jest": "^24.8.0",
    "babel-plugin-macros": "^2.6.1",
    "babel-plugin-module-resolver": "^4.0.0",
    "chalk": "^4.0.0",
    "cypress": "^3.7.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-cypress": "^2.7.0",
    "eslint-plugin-eslint-comments": "^3.1.2",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-import-helpers": "^1.0.2",
    "eslint-plugin-jest": "^23.10.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-ramda": "^2.5.1",
    "graphql-schema-linter": "^0.4.0",
    "hostile": "^1.3.2",
    "is-elevated": "^3.0.0",
    "jest-junit": "^10.0.0",
    "lerna": "^3.16.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "start-server-and-test": "^1.10.6"
  }
}
